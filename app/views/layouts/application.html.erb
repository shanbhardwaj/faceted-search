<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag "pagination" %>
    <%= stylesheet_link_tag "label" %>
    <%= stylesheet_link_tag "controls" %>
    <%= stylesheet_link_tag "bootstrap_and_overrides", "common_styles", "style", "wine_summary", "font-awesome", "retailer","findwines", "application" %>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= stylesheet_link_tag "jquery.multiSelect" %>
    <%= stylesheet_link_tag "jquery-ui-1.8.17.custom" %>
    
    <%= javascript_include_tag "application.js" %>
    <%= javascript_include_tag "retailer_ledgers.js" %>
    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
    <%= javascript_include_tag "jquery.gmap.js" %>
    <%= javascript_include_tag "findwine.js" %>
    <%= javascript_include_tag "winesummarypage.js" %>
    <%= javascript_include_tag "jquery-swapsies.js" %>
    <%= javascript_include_tag "markerwithlabel.js" %>
    <%= javascript_include_tag "newControls.js" %>
    <%= javascript_include_tag "jquery.findmap.js" %>
    <%= javascript_include_tag "jquery.route.js" %>
    <%= javascript_include_tag "jquery.multiSelect.js" %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>
<!--     </div> -->
  </body>
</html>
